RewriteEngine On
RewriteBase /event-management/

# Redirect all requests to public directory
RewriteCond %{THE_REQUEST} /public/([^\s?]*) [NC]
RewriteRule ^ %1 [L,NE,R=302]

RewriteRule ^((?!public/).*)$ public/$1 [L,NC]

# Prevent directory listing
Options -Indexes

# Deny access to sensitive files
<FilesMatch "^\.">
    Order allow,deny
    Deny from all
</FilesMatch>

<FilesMatch "(composer\.json|composer\.lock|package\.json|package-lock\.json|\.gitignore|README\.md)$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Deny access to directories without index files
<IfModule mod_autoindex.c>
    Options -Indexes
</IfModule>

# Protect sensitive directories
<IfModule mod_rewrite.c>
    RewriteRule ^(config|src|templates|vendor) - [F,L]
</IfModule> 